<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sousaitalo.cursoandroid.com.basiccheckbox.MainActivity">

    <TextView
        android:text="BasicCheckBox :D "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/TextView"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <CheckBox
        android:text="Gato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/checkBoxGatoId"
        android:layout_below="@+id/TextView"
        android:layout_alignLeft="@+id/checkBoxCachorroId"
        android:layout_alignStart="@+id/checkBoxCachorroId" />

    <CheckBox
        android:text="Cachorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCachorroId"
        android:layout_below="@+id/checkBoxGatoId"
        android:layout_alignLeft="@+id/checkBoxPapagaioId"
        android:layout_alignStart="@+id/checkBoxPapagaioId" />

    <CheckBox
        android:text="Papagaio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxPapagaioId"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/checkBoxCachorroId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/botaoId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoId"
        android:layout_toRightOf="@+id/TextView"
        android:layout_toEndOf="@+id/TextView"
        android:layout_marginTop="71dp"
        android:id="@+id/resultadoId" />

</RelativeLayout>
